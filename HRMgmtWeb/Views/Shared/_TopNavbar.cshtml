                        <li class="user-header text-bg-primary">
                            <img src="/assets/img/user2-160x160.jpg"
                                 class="rounded-circle shadow"
                                 alt="User Image" />
                            <p>
                                @User.Identity.Name
                                <small>Member since @DateTime.Now.ToString("MMM. yyyy")</small>
                            </p>
                        </li>
                        <!--end::User Image-->
                        <!--begin::Menu Body-->
                        <li class="user-body">
                            <div class="row">
                                <div class="col-4 text-center"><a href="#">Profile</a></div>
