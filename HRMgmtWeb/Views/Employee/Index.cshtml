@using HRMgmtWeb.Models.Enums
@model IEnumerable<Employee>

<table class="table table-hover">
    <thead>
        <tr>
            <th>Employee ID</th>
            <th>Name</th>
            <th>Department</th>
            <th>Position</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr data-href="@Url.Action("Details", new { id = item.Id })">
                <td>@item.EmployeeId</td>
                <td>@item.FirstName @item.LastName</td>
                <td>@item.Department?.Name</td>
                <td>@item.Position</td>
                <td><span class="badge bg-@GetStatusBadge(item.Status)">@item.Status</span></td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary">Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@functions {
    string GetStatusBadge(EmploymentStatus status)
    {
        return status switch
        {
            EmploymentStatus.Active => "success",
            EmploymentStatus.OnLeave => "warning",
            EmploymentStatus.Terminated => "danger",
            _ => "secondary"
        };
    }
}