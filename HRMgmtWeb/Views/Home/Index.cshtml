@using HRMgmtWeb.Models.Enums
@model HRMgmtWeb.Models.ViewModels.DashboardViewModel
@{
    ViewData["Title"] = "HR Dashboard";
}

<!-- Content Header -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">HR Dashboard</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-end">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active">Dashboard</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<!-- Main Content -->
<div class="content">
    <div class="container-fluid">
        <!-- Employee Stats -->
        <div class="row">
            <div class="col-12 col-sm-6 col-md-3 mb-3">
                <div class="card bg-primary text-white">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="card-title">Total Employees</h6>
                                <h2 class="mb-0">@Model.TotalEmployees</h2>
                            </div>
                            <div class="icon-circle">
                                <i class="fas fa-users fa-2x"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-12 col-sm-6 col-md-3 mb-3">
                <div class="card bg-success text-white">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="card-title">Active Employees</h6>
                                <h2 class="mb-0">@Model.ActiveEmployees</h2>
                            </div>
                            <div class="icon-circle">
                                <i class="fas fa-user-check fa-2x"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-12 col-sm-6 col-md-3 mb-3">
                <div class="card bg-warning text-dark">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="card-title">On Leave</h6>
                                <h2 class="mb-0">@Model.OnLeaveEmployees</h2>
                            </div>
                            <div class="icon-circle">
                                <i class="fas fa-calendar-times fa-2x"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-12 col-sm-6 col-md-3 mb-3">
                <div class="card bg-danger text-white">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="card-title">Open Requests</h6>
                                <h2 class="mb-0">@Model.OpenRequests</h2>
                            </div>
                            <div class="icon-circle">
                                <i class="fas fa-exclamation-triangle fa-2x"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Main Content Row -->
        <div class="row">
            <!-- Recent Hires Column -->
            <div class="col-lg-8">
                <div class="card">
                    <div class="card-header border-0">
                        <div class="d-flex justify-content-between align-items-center">
                            <h3 class="card-title">Recent Hires</h3>
                            <div class="card-tools">
                                <button type="button" class="btn btn-tool" data-bs-toggle="collapse" data-bs-target="#recentHiresTable">
                                    <i class="fas fa-minus"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                    <div class="card-body table-responsive p-0 collapse show" id="recentHiresTable">
                        <table class="table table-hover table-striped">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Position</th>
                                    <th>Department</th>
                                    <th>Start Date</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var employee in Model.RecentHires)
                                {
                                    <tr>
                                        <td>@employee.FirstName @employee.LastName</td>
                                        <td>@employee.Position</td>
                                        <td>@employee.Department?.Name</td>
                                        <td>@employee.JoinDate.ToString("yyyy-MM-dd")</td>
                                        <td>
                                            @switch (employee.Status)
                                            {
                                                case EmploymentStatus.Active:
                                                    <span class="badge bg-success">Active</span>
                                                    break;
                                                case EmploymentStatus.OnLeave:
                                                    <span class="badge bg-warning text-dark">On Leave</span>
                                                    break;
                                                case EmploymentStatus.Probation:
                                                    <span class="badge bg-info">Probation</span>
                                                    break;
                                                case EmploymentStatus.Terminated:
                                                    <span class="badge bg-danger">Terminated</span>
                                                    break;
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <div class="card-footer clearfix">
                        <a href="@Url.Action("Index", "Employee")" class="btn btn-sm btn-primary float-end">
                            View All Employees <i class="fas fa-arrow-circle-right"></i>
                        </a>
                    </div>
                </div>
            </div>

            <!-- Quick Actions Column -->
            <div class="col-lg-4">
                <div class="card">
                    <div class="card-header border-0">
                        <h3 class="card-title">Quick Actions</h3>
                    </div>
                    <div class="card-body">
                        <div class="d-grid gap-2">
                            <a href="@Url.Action("Create", "Employee")" class="btn btn-primary text-start">
                                <i class="fas fa-user-plus me-2"></i> Add New Employee
                            </a>
                            <a href="@Url.Action("Index", "LeaveRequests")" class="btn btn-success text-start">
                                <i class="fas fa-calendar-check me-2"></i> Process Leave Requests
                            </a>
                            <a href="@Url.Action("Index", "Payroll")" class="btn btn-info text-start">
                                <i class="fas fa-money-bill-wave me-2"></i> Run Payroll
                            </a>
                            <a href="@Url.Action("Index", "Reports")" class="btn btn-warning text-start">
                                <i class="fas fa-chart-bar me-2"></i> Generate Reports
                            </a>
                        </div>
                    </div>
                </div>

                <!-- Upcoming Events -->
                <div class="card mt-4">
                    <div class="card-header border-0">
                        <h3 class="card-title">Upcoming Events</h3>
                    </div>
                    <div class="card-body p-0">
                        <div class="list-group list-group-flush">
                            <div class="list-group-item d-flex justify-content-between align-items-center">
                                <div>
                                    <h6 class="mb-1">Quarterly Review Meeting</h6>
                                    <small class="text-muted">Tomorrow, 10:00 AM</small>
                                </div>
                                <span class="badge bg-primary">Meeting</span>
                            </div>
                            <div class="list-group-item d-flex justify-content-between align-items-center">
                                <div>
                                    <h6 class="mb-1">Payroll Processing</h6>
                                    <small class="text-muted">In 3 days</small>
                                </div>
                                <span class="badge bg-success">Payroll</span>
                            </div>
                            <div class="list-group-item d-flex justify-content-between align-items-center">
                                <div>
                                    <h6 class="mb-1">New Hire Orientation</h6>
                                    <small class="text-muted">Next Monday, 9:00 AM</small>
                                </div>
                                <span class="badge bg-info">Training</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Make table rows clickable if they have data-href attribute
            $('table.table tbody tr[data-href]').on('click', function() {
                window.location.href = $(this).data('href');
            });

            // Initialize tooltips
            $('[data-bs-toggle="tooltip"]').tooltip();
        });
    </script>
}