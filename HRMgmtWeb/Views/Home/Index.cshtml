@{
    ViewData["Title"] = "HR Dashboard";
}

<!--begin::App Content Header-->
<div class="app-content-header">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-6">
                <h3 class="mb-0">HR Dashboard</h3>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-end">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active">Dashboard</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<!--begin::App Content-->
<div class="app-content">
    <div class="container-fluid">
        <!-- Employee Stats -->
        <div class="row">
            <div class="col-12 col-sm-6 col-md-3">
                <div class="info-box">
                    <span class="info-box-icon text-bg-primary shadow-sm">
                        <i class="bi bi-people-fill"></i>
                    </span>
                    <div class="info-box-content">
                        <span class="info-box-text">Total Employees</span>
                        <span class="info-box-number">247</span>
                    </div>
                </div>
            </div>

            <div class="col-12 col-sm-6 col-md-3">
                <div class="info-box">
                    <span class="info-box-icon text-bg-success shadow-sm">
                        <i class="bi bi-calendar-check"></i>
                    </span>
                    <div class="info-box-content">
                        <span class="info-box-text">Present Today</span>
                        <span class="info-box-number">215</span>
                    </div>
                </div>
            </div>

            <div class="col-12 col-sm-6 col-md-3">
                <div class="info-box">
                    <span class="info-box-icon text-bg-warning shadow-sm">
                        <i class="bi bi-clock-history"></i>
                    </span>
                    <div class="info-box-content">
                        <span class="info-box-text">On Leave</span>
                        <span class="info-box-number">22</span>
                    </div>
                </div>
            </div>

            <div class="col-12 col-sm-6 col-md-3">
                <div class="info-box">
                    <span class="info-box-icon text-bg-danger shadow-sm">
                        <i class="bi bi-exclamation-triangle"></i>
                    </span>
                    <div class="info-box-content">
                        <span class="info-box-text">Open Requests</span>
                        <span class="info-box-number">14</span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Main Content Row -->
        <div class="row">
            <!-- Recent Hires Column -->
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Recent Hires</h3>
                        <div class="card-tools">
                            <button type="button" class="btn btn-tool" data-lte-toggle="card-collapse">
                                <i data-lte-icon="expand" class="bi bi-plus-lg"></i>
                                <i data-lte-icon="collapse" class="bi bi-dash-lg"></i>
                            </button>
                        </div>
                    </div>
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table table-hover m-0">
                                <thead>
                                    <tr>
                                        <th>Name</th>
                                        <th>Position</th>
                                        <th>Department</th>
                                        <th>Start Date</th>
                                        <th>Status</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>John Smith</td>
                                        <td>Software Developer</td>
                                        <td>IT</td>
                                        <td>2023-05-15</td>
                                        <td><span class="badge text-bg-success">Active</span></td>
                                    </tr>
                                    <tr>
                                        <td>Sarah Johnson</td>
                                        <td>HR Specialist</td>
                                        <td>Human Resources</td>
                                        <td>2023-06-01</td>
                                        <td><span class="badge text-bg-success">Active</span></td>
                                    </tr>
                                    <tr>
                                        <td>Michael Chen</td>
                                        <td>Accountant</td>
                                        <td>Finance</td>
                                        <td>2023-06-10</td>
                                        <td><span class="badge text-bg-warning">Probation</span></td>
                                    </tr>
                                    <tr>
                                        <td>Emily Wilson</td>
                                        <td>Marketing Manager</td>
                                        <td>Marketing</td>
                                        <td>2023-06-15</td>
                                        <td><span class="badge text-bg-success">Active</span></td>
                                    </tr>
                                    <tr>
                                        <td>David Brown</td>
                                        <td>Sales Executive</td>
                                        <td>Sales</td>
                                        <td>2023-06-20</td>
                                        <td><span class="badge text-bg-warning">Probation</span></td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div class="card-footer clearfix">
                        <a href="@Url.Action("Index", "Employees")" class="btn btn-sm btn-primary float-end">
                            View All Employees
                        </a>
                    </div>
                </div>
            </div>

            <!-- Quick Actions Column -->
            <div class="col-md-4">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Quick Actions</h3>
                    </div>
                    <div class="card-body">
                        <div class="d-grid gap-2">
                            <a href="@Url.Action("Create", "Employee")" class="btn btn-primary">
                                <i class="bi bi-person-plus"></i> Add New Employee
                            </a>
                            <a href="@Url.Action("Index", "LeaveRequests")" class="btn btn-success">
                                <i class="bi bi-calendar-plus"></i> Process Leave Requests
                            </a>
                            <a href="@Url.Action("Index", "Payroll")" class="btn btn-info">
                                <i class="bi bi-cash-stack"></i> Run Payroll
                            </a>
                            <a href="@Url.Action("Index", "Reports")" class="btn btn-warning">
                                <i class="bi bi-graph-up"></i> Generate Reports
                            </a>
                        </div>
                    </div>
                </div>

                <!-- Upcoming Events -->
                <div class="card mt-4">
                    <div class="card-header">
                        <h3 class="card-title">Upcoming Events</h3>
                    </div>
                    <div class="card-body p-0">
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                <div>
                                    <h6 class="mb-0">Quarterly Review Meeting</h6>
                                    <small class="text-muted">Tomorrow, 10:00 AM</small>
                                </div>
                                <span class="badge text-bg-primary">Meeting</span>
                            </li>
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                <div>
                                    <h6 class="mb-0">Payroll Processing</h6>
                                    <small class="text-muted">In 3 days</small>
                                </div>
                                <span class="badge text-bg-success">Payroll</span>
                            </li>
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                <div>
                                    <h6 class="mb-0">New Hire Orientation</h6>
                                    <small class="text-muted">Next Monday, 9:00 AM</small>
                                </div>
                                <span class="badge text-bg-info">Training</span>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Any page-specific scripts can go here
        $(document).ready(function() {
            // Example: Make table rows clickable
            $('table.table tbody tr').click(function() {
                window.location = $(this).data('href');
            });
        });
    </script>
}