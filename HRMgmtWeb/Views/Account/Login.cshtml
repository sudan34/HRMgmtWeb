@model HRMgmtWeb.Models.ViewModels.LoginVM
@{
    Layout = "_LoginLayout";
    ViewData["Title"] = "Login";
}

@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor
@{
    var loginAttempts = HttpContextAccessor.HttpContext?.Session.GetInt32("LoginAttempts") ?? 0;
    var isLockedOut = HttpContextAccessor.HttpContext?.Session.GetString("AccountLocked") == "true";
}
<div class="container">
    <div class="row justify-content-center min-vh-100 align-items-center">
        <div class="col-md-8 col-lg-6 col-xl-5">
            <div class="card shadow border-0">
                <div class="card-body p-4 p-md-5">
                    <!-- Header -->
                    <div class="text-center mb-4">
                        <i class="bi bi-person-badge text-primary" style="font-size: 2.5rem;"></i>
                        <h2 class="h3 mt-3 mb-1 fw-bold">HR Portal</h2>
                        <p class="text-muted">Super Admin Login</p>
                    </div>

                    <!-- Login Form -->
                    <form method="post">
                        <!-- Email Field -->
                        <div class="mb-3">
                            <label class="form-label">Email</label>
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="bi bi-envelope"></i>
                                </span>
                                <input asp-for="Email" type="email" class="form-control form-control-lg"
                                       placeholder="admin@example.com" required>
                            </div>
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>

                        <!-- Password Field -->
                        <div class="mb-3">
                            <label class="form-label">Password</label>
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="bi bi-lock"></i>
                                </span>
                                <input asp-for="Password" type="password" class="form-control form-control-lg"
                                       placeholder="••••••••" required>
                                <button class="btn btn-outline-secondary toggle-password" type="button">
                                    <i class="bi bi-eye"></i>
                                </button>
                            </div>
                            <span asp-validation-for="Password" class="text-danger small"></span>
                        </div>

                        <!-- Remember Me -->
                        <div class="mb-3 form-check">
                            <input asp-for="RememberMe" type="checkbox" class="form-check-input" id="rememberMe">
                            <label class="form-check-label" for="rememberMe">
                                <i class="bi bi-check2-square me-1"></i> Remember me
                            </label>
                        </div>

                        <!-- Login Button -->
                        <div class="d-grid mb-3">
                            <button type="submit" class="btn btn-primary btn-lg py-2">
                                <i class="bi bi-box-arrow-in-right me-2"></i> Sign In
                            </button>
                        </div>

                        <!-- Links -->
                        <div class="text-center small">
                            <a href="#" class="text-decoration-none me-3">
                                <i class="bi bi-question-circle"></i> Help
                            </a>
                            <a href="#" class="text-decoration-none">
                                <i class="bi bi-shield-lock"></i> Forgot Password?
                            </a>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Footer -->
            <div class="text-center mt-4">
                <p class="text-muted small">
                    <i class="bi bi-c-circle"></i> @DateTime.Now.Year Your Company
                </p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Toggle password visibility
        document.querySelectorAll('.toggle-password').forEach(button => {
            button.addEventListener('click', () => {
                const input = button.parentNode.querySelector('input');
                const icon = button.querySelector('i');

                if (input.type === 'password') {
                    input.type = 'text';
                    icon.classList.replace('bi-eye', 'bi-eye-slash');
                } else {
                    input.type = 'password';
                    icon.classList.replace('bi-eye-slash', 'bi-eye');
                }
            });
        });
    </script>
}