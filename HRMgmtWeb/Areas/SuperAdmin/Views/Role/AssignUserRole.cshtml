@model List<HRMgmtWeb.Models.ViewModels.RoleViewModel>
@{
    ViewData["Title"] = "Assign User Roles";
}

<div class="card shadow">
    <div class="card-header bg-primary text-white">
        <h3 class="mb-0"><i class="bi bi-person-gear"></i> @ViewData["Title"] for @ViewBag.UserName</h3>
    </div>
    <div class="card-body">
        <form asp-action="AssignUserRole" method="post">
            <input type="hidden" name="userId" value="@ViewBag.UserId" />

            <div class="mb-3">
                @for (int i = 0; i < Model.Count; i++)
                {
                    <div class="form-check">
                        <input type="hidden" asp-for="@Model[i].Id" />
                        <input type="hidden" asp-for="@Model[i].Name" />
                        <input asp-for="@Model[i].IsSelected" class="form-check-input" />
                        <label class="form-check-label" asp-for="@Model[i].IsSelected">
                            @Model[i].Name
                        </label>
                    </div>
                }
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-save"></i> Update Roles
                </button>
                <a asp-action="UserList" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Back to List
                </a>
            </div>
        </form>
    </div>
</div>